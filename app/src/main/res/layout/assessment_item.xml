<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:weightSum="3"
    android:orientation="horizontal">

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:paddingLeft="10dp"
        android:src="@drawable/notebook"
        android:scaleType="centerInside"
        ></ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:weightSum="4"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/assessment_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Assignment Title"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        ></TextView>

    <TextView
        android:id="@+id/assessment_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="13dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        ></TextView>

    <TextView
        android:id="@+id/assessment_item_subject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subject: "
        android:textSize="13dp"
        android:layout_weight="1"
        android:paddingLeft="10dp"
        ></TextView>

    <TextView
        android:id="@+id/assessment_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Due: "
        android:textSize="13dp"
        android:textStyle="bold"
        android:paddingLeft="10dp"
        ></TextView>

</LinearLayout>

    <LinearLayout
        android:id="@+id/button_layout"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/edit_button"
            android:layout_weight="1"
            android:src="@drawable/pencil"
            android:layout_width="match_parent"
            android:layout_height="0dp"></ImageView>

        <ImageView
            android:id="@+id/delete_button"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/delete"
            android:layout_width="match_parent"
            android:layout_height="0dp"></ImageView>


    </LinearLayout>
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Assignment description"-->
<!--        ></TextView>-->

</LinearLayout>